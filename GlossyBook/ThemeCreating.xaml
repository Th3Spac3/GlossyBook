<Window x:Class="GlossyBook.ThemeCreating"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlossyBook"
        mc:Ignorable="d"
        Title="ThemeCreating" Height="100" Width="200" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock>Добавить тему</TextBlock>
        <TextBox Text="{Binding Name}" />
        <DockPanel HorizontalAlignment="Center">
            <Button IsDefault="True" DockPanel.Dock="Left" Width="30" Margin="5,10,10,1" Content="Добавить" FontSize="6" Click="OnCreateClicked"/>
            <Button IsCancel="True" DockPanel.Dock="Right" Width="30" Margin="10,10,5,1" Content="Отмена" FontSize="6"/>
        </DockPanel>
    </StackPanel>
</Window>
